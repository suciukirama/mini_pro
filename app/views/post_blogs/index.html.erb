      <td style="font-size: 16px; " colspan="3"><b><center>Action</center></b></td>
      </tr>
  </thead>

  <tbody>
    <% @post_blogs.each do |post_blog| %>
      <tr>
        <td><%= post_blog.title %></td>
        <td><%= post_blog.summary %></td>
         <!--<td><%= post_blog.content %></td> -->
        <td style="width: 100px;"><%= post_blog.title_image %></td>
        <!--  <td><img style="width: 100px; height: 100px;" src=<%= post_blog.title_image %>></td>> -->
        <td><%= link_to 'Show', post_blog %></td>
        <td><%= link_to 'Edit', edit_post_blog_path(post_blog) %></td>
        <td><%= link_to 'Destroy', post_blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          
      </tr>
    <% end %>
  </tbody>

</table>

<br>

