<p id="notice"><%= notice %></p>

<h1>Post Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Summary</th>
      <th>Content</th>
      <th>Title image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_blogs.each do |post_blog| %>
      <tr>
        <td><%= post_blog.title %></td>
        <td><%= post_blog.summary %></td>
        <td><%= post_blog.content %></td>
        <td><%= post_blog.title_image %></td>
        <td><%= link_to 'Show', post_blog %></td>
        <td><%= link_to 'Edit', edit_post_blog_path(post_blog) %></td>
        <td><%= link_to 'Destroy', post_blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <img src=<%= post_blog.title_image %>>
      </tr>
    <% end %>
  </tbody>

</table>

<br>

<%= link_to 'New Post Blog', new_post_blog_path %>
