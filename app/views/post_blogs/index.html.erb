<table class='table' border="1">
  <thead>
    <tr>

      <td style="font-size: 16px;"><b><center>Title</center></b></td>
      <td style="font-size: 16px;"><b><center>Summary</center></b></td>
      <td style="font-size: 16px;"><b><center>Title Image</center></b></td>
